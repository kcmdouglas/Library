<!DOCTYPE html>
<html>
  <head>
    <title>Epicodus Library</title>
    <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css'>
    <link rel="stylesheet" href="/css/styles.css">
  </head>
  <body>
    <nav class="navbar navbar-default">
      <div class="container-fluid">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse" aria-expanded="false">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="/">Welcome to the Epicodus Library!</a>
        </div>

        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav">
            <li><a href="/admin">Admin</a></li>
            <li><a href="/catalog">Catalog</a></li>
          </ul>
          <form class="navbar-form navbar-left" action="/catalog/search" method="get">
              <div class="form-group">
                <label for="search">Search</label>
                <select id="search-type" name="search-type">
                  <option value="1">Title</option>
                  <option value="2">Author</option>
                  <option value="3">Genre</option>
                </select>
                <input id="search" type="text" name="search" class="form-control" placeholder="Search" style="width: 250px;" required>
              </div>
              <button type="submit" class="btn btn-warning">Search!</button>
          </form>
        </div>
      </div>
    </nav>
    <div class="container">

      #parse( $template )

    </div>
  </body>
</html>
